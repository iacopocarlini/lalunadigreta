---
import { SITE_TITLE } from '../consts';
---

<!-- Header Menu Center -->
<header class="w-full text-gray-700 bg-white border-t border-gray-100 shadow-sm body-font">
	<div class="container flex flex-row items-start justify-between p-6 mx-auto md:flex-row">
		
		<!-- Icon -->
		<a class="flex items-center my-auto font-medium text-gray-900 title-font md:mb-0">
			<img src='/favicon.png' alt='Restaurant icon' class='w-8 max-w-xs my-auto'/>
		</a>
		
		<!-- Title -->
		<nav class="flex-2 mx-auto my-auto">
			<a href="#_" class="m-auto font-bold">{SITE_TITLE}</a>
		</nav>
		
		<!-- Language flags -->
		<div class="items-center h-full my-auto">
			<img src='/it.png' alt='Italian flag' class='w-8 max-w-xs rounded-sm'/>
		</div>
	</div>
</header>
